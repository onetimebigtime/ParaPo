<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.TripsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/trips_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/no_transpo_view"
        android:layout_width="340dp"
        android:layout_height="340dp"
        android:src="@drawable/ic_wifi_tethering_error"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/trips_list"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/no_trasportation_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_transportation_available"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/trips_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/trips_list"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>